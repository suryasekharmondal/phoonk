<resources>

    <style name="Theme"  />

    <!-- Primary theme. All customizations that are SPECIFIC to API levels 21+ go here. -->
    <style name="Theme.BasePhoonk" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <!-- Primary theme. All other customizations that are NOT SPECIFIC to any supported API level
     go here. -->
    <style name="Theme.Phoonk" parent="Theme.BasePhoonk">

        <!-- The primary color, used throughout the app, e.g. ActionBar. -->
        <item name="colorPrimary">@color/purple_500</item>

        <!-- The primary dark color, used in places like the status bar. -->
        <item name="colorPrimaryDark">@color/purple_700</item>

        <!-- The accent color, used to provide contrast to the primary color, e.g. FAB. -->
        <item name="colorAccent">@color/teal_500</item>

        <!-- Customizations related to windows. -->
        <item name="android:colorBackground">@color/grey_100</item>
        <item name="android:windowBackground">@color/grey_100</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Customizations related to how text appears. -->
        <item name="android:textAppearance">@style/TextAppearance</item>

    </style>

    <style name="ImmersiveTheme" parent="Theme.Phoonk" />

</resources>