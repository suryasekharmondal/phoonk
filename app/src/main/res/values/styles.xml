<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Text styles. -->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <!-- Text style for headings. -->
    <style name="TextAppearance.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <!-- Text style for subheadings. -->
    <style name="TextAppearance.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead</item>
    </style>

    <!-- Text style for general content. -->
    <style name="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_size_subhead</item>
    </style>

    <!-- Text style for caption. -->
    <style name="TextAppearance.Caption">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

</resources>
